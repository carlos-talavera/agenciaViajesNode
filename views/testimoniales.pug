extends ./layout/index

block contenido
    main(class="container mt-5")
        h1(class="mt-5 text-center") #{pagina}

        blockquote(class="text-center") Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales


        div(class="row")

            div(class="col-md-12")
                h2(class="d-block w-100 text-center") Agrega un Testimonial

                if (errores)
                    each error in errores
                        div(class="alert alert-danger col text-center") #{error.mensaje}

                if (enviado)
                    div(class="alert alert-success col text-center") Formulario enviado correctamente

            div(class="row justify-content-center col")
                div(class="col-md-8")
                    form(action="/testimoniales", method="POST") 
                        div(class="form-group")
                            label(for="nombre") Nombre
                            input(class="form-control", id="nombre", type="text", placeholder="Tu nombre", name="nombre", value=`${nombre || ''}`)
                        div(class="form-group")
                            label(for="correo") Correo Electrónico
                            input(class="form-control", id="correo", type="email", placeholder="Tu correo electrónico", name="correo", value=`${correo || ''}`)
                        div(class="form-group")
                            label(for="mensaje") Mensaje
                            textarea(class="form-control", id="mensaje", name="mensaje", placeholder="Tu mensaje") #{mensaje}

                        input(class="btn btn-success btn-block", type="submit")